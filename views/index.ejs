                                                    <% var priceBuy = self.priceBuy; %>
                                                    <% var timeBuy = self.timeBuy; %>
                                                    <% var bids_q = self.bids_q; %>
                                                    <% var asks_q = self.asks_q; %>
                                                    <% var rate = bids_q > asks_q ? bids_q / asks_q : asks_q / bids_q; %>
                                                    <% var profit = markets[market].last - price_buy; %>
                                                    <% var percent = profit / price_buy * 100; %>
                                                    <% var classess = ''; %>
                                                    <% if(percent > 0){ %> 
                                                    <% classess = 'text-success'; %> 
                                                    <% }else{ %> 
                                                    <% classess = 'text-danger'; %> 
                                                    <% } %> 
