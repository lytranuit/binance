                                                        <th>Thị trường</th>
                                                        <th>Giá mua</th>
                                                        <th>Giá hiện tại</th>
                                                        <th>Volume Rate</th>
                                                        <th>Chỉ số 1h</th>
                                                        <th>Chỉ số 5m</th>
                                                        <th>Hành động</th>
                                                    </tr>
                                                </thead>
